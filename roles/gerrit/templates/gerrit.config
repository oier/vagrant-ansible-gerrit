[gerrit]
        basePath = git
        canonicalWebUrl = http://localhost:8080/
[database]
type = POSTGRESQL
hostname = localhost
database = {{db_name}}
username = {{db_user}}
password = {{db_password}}

[auth]
        type = OPENID
[sendemail]
        smtpServer = {{database_server}}
[container]
        user = {{unix_user}}
        javaHome = /usr/lib/jvm/java-7-oracle/jre
[sshd]
        listenAddress = *:29418
[httpd]
        listenUrl = http://*:8080/
[cache]
        directory = cache
                                                                                                                                                    